{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/datalineio/dataline/blob/master/dataline-config/src/main/resources/json/StandardSyncSummary.json",
  "title": "StandardSyncSummary",
  "description": "standard information output by ALL taps for a sync step (our version of state.json)",
  "type": "object",
  "required": ["attemptId", "tables", "recordsSynced", "version", "status", "startTime", "endTime"],
  "additionalProperties": false,
  "properties": {
    "attemptId": {
      "type": "string",
      "format": "uuid"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "in_progress","completed", "failed", "cancelled"]
    },
    "recordsSynced": {
      "type": "integer",
      "minValue": 0
    },
    "version": {
      "type": "integer"
    },
    "tables": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "lastRecord": {
            "description": "blob of the last record",
            "type": "object"
          },
          "version": {
            "type": "integer"
          }
        }
      }
    },
    "startTime": {
      "type": "integer"
    },
    "endTime": {
      "type": "integer"
    },
    "logs": {
    }
  }
}
