plugins {
    id 'airbyte-python'
    id 'airbyte-docker'
    id 'airbyte-standard-test'
}

airbytePython {
    moduleDirectory 'source_{{snakeCase name}}'
}

dependencies {
    implementation files(project(':airbyte-integrations:bases:standard-test').airbyteDocker.outputs)
    implementation files(project(':airbyte-integrations:bases:base-python').airbyteDocker.outputs)
}
