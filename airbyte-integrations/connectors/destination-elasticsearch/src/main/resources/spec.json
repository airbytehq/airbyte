{
  "documentationUrl": "https://docs.airbyte.io/integrations/destinations/elasticsearch",
  "supportsIncremental": false,
  "supportsNormalization": false,
  "supportsDBT": false,
  "supported_destination_sync_modes": ["append"],
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Elasticsearch Connection Configuration",
    "type": "object",
    "required": [
      "host"
    ],
    "additionalProperties": false,
    "properties": {
      "host": {
        "title": "Host",
        "type": "string",
        "description": "The host name of the Elasticsearch server",
        "examples": ["elastic"],
        "order": 0
      },
      "port": {
        "title": "Port",
        "type": "integer",
        "description": "The port of the server.",
        "minimum": 0,
        "maximum": 65536,
        "examples": ["9200"],
        "default": 9200,
        "order": 1
      },
      "apiKeyId": {
        "title": "API Key ID",
        "description": "The Key ID to used when accessing an enterprise Elasticsearch instance.",
        "type": "string",
        "order": 3
      },
      "apiKeySecret": {
        "title": "API Key Secret",
        "description": "The secret associated with the API Key ID.",
        "type": "string",
        "airbyte_secret": true,
        "order": 4
      },
      "ssl": {
        "title": "SSL Connection",
        "description": "Encrypt data using SSL.",
        "type": "boolean",
        "default": false,
        "order": 5
      }
    }
  }
}
