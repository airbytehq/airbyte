{
  "documentationUrl": "https://docs.airbyte.com/integrations/destinations/palantir-foundry",
  "supported_destination_sync_modes": ["append"],
  "supportsIncremental": false,
  "supportsNormalization": false,
  "supportsDBT": false,
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Palantir Foundry",
    "type": "object",
    "required": ["host", "auth", "destination_config", "sync_mode"],
    "additionalProperties": false,
    "properties": {
      "host": {
        "title": "Palantir Foundry Host",
        "description": "ex: mystack.palantirfoundry.com",
        "type": "string",
        "order": 0
      },
      "auth": {
        "title": "Authentication",
        "description": "How you want to authenticate with Palantir Foundry",
        "type": "object",
        "order": 1,
        "oneOf": [
          {
            "title" : "Client Credentials",
            "required" : [
              "instance",
              "client_id",
              "client_secret"
            ],
            "type": "object",
            "properties" : {
              "instance": {
                "type": "string",
                "enum": ["client_credentials"],
                "default": "client_credentials"
              },
              "client_id": {
                "title": "Client ID",
                "type": "string",
                "order": 0
              },
              "client_secret": {
                "title": "Client Secret",
                "type": "string",
                "order": 1,
                "airbyte_secret": true
              }
            }
          }
        ]
      },
      "destination_config": {
        "title": "Destination Configuration",
        "type": "object",
        "required": ["project_rid"],
        "order": 2,
        "properties": {
          "project_rid": {
            "title": "Project RID",
            "type": "string",
            "order": 0
          }
        }
      },
      "sync_mode": {
        "type": "string",
        "enum": ["Stream"],
        "default": "Stream"
      }
    }
  }
}
