{
  "documentationUrl": "https://docs.airbyte.com/integrations/destinations/palantir-foundry",
  "supported_destination_sync_modes": ["append"],
  "supportsIncremental": false,
  "supportsNormalization": false,
  "supportsDBT": false,
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Palantir Foundry",
    "type": "object",
    "required": ["host", "auth", "destination_config"],
    "additionalProperties": false,
    "properties": {
      "host": {
        "title": "Palantir Foundry Host",
        "description": "ex: mystack.palantirfoundry.com",
        "type": "string",
        "order": 0
      },
      "auth": {
        "title" : "OAuth 2.0 Client Credentials",
        "required" : [
          "client_id",
          "client_secret"
        ],
        "type": "object",
        "properties" : {
          "client_id": {
            "title": "Client ID",
            "type": "string",
            "order": 0
          },
          "client_secret": {
            "title": "Client Secret",
            "type": "string",
            "order": 1,
            "airbyte_secret": true
          }
        }
      },
      "destination_config": {
        "title": "Destination Configuration",
        "type": "object",
        "required": ["project_rid"],
        "order": 2,
        "properties": {
          "project_rid": {
            "title": "Project RID",
            "type": "string",
            "order": 0
          }
        }
      }
    }
  }
}
