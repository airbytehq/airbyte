{
  "documentationUrl": "https://docsurl.com",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Elasticsearch Spec",
    "type": "object",
    "required": ["host", "username", "password"],
    "additionalProperties": false,
    "properties": {
      "host": {
        "type": "string",
        "description": "ElasticSearch host"
      },
      "username": {
        "type": "string",
        "description": "Username with access to the ElasticSearch cluster"
      },
      "password": {
        "type": "string",
        "description": "Password for the username",
        "airbyte_secret": true
      },
      "page_size": {
        "type": "integer",
        "description": "Page size used to scroll through ES indices",
        "default": 1000
      }
    }
  }
}
