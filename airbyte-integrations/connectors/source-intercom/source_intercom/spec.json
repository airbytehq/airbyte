{
  "documentationUrl": "https://go.estuary.dev/3L0sGJ",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Source Intercom Spec",
    "type": "object",
    "required": ["start_date", "credentials"],
    "additionalProperties": true,
    "properties": {
      "start_date": {
        "type": "string",
        "title": "Start date",
        "description": "UTC date and time in the format 2017-01-25T00:00:00Z. Any data before this date will not be replicated.",
        "examples": ["2020-11-16T00:00:00Z"],
        "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}Z$"
      },
      "credentials": {
        "type": "object",
        "discriminator": {
          "propertyName": "auth_type"
        },
        "oneOf": [{
          "type": "object",
          "title": "OAuth2",
          "x-oauth2-provider": "intercom",
          "required": ["auth_type", "access_token"],
          "properties": {
            "auth_type": {
              "type": "string",
              "const": "oauth2",
              "default": "oauth2",
              "order": 0
            },
            "access_token": {
              "title": "Access token",
              "type": "string",
              "description": "Access token for making authenticated requests. See the Intercom docs for more information https://go.estuary.dev/b5C9aN",
              "airbyte_secret": true
            },  
          "client_id": {
            "title": "Client ID",
            "type": "string",
            "airbyte_secret": true
          },  
          "client_secret": {
            "title": "Client Secret",
            "type": "string",
            "airbyte_secret": true
          }
          }
        }, {
          "type": "object",
          "title": "Access Token",
          "required": ["auth_type", "access_token"],
          "properties": {
            "auth_type": {
              "type": "string",
              "const": "access_token",
              "default": "access_token",
              "order": 0
            },
            "access_token": {
              "title": "Access token",
              "type": "string",
              "description": "Access token for making authenticated requests. See the Intercom docs for more information https://go.estuary.dev/b5C9aN",
              "airbyte_secret": true
            }
          }
        }]
      }
    }
  },
  "authSpecification": {
    "provider": "intercom",
    "authUrlTemplate": "https://app.intercom.com/oauth?client_id={{ client_id }}&state={{ state }}",
    "accessTokenUrlTemplate": "https://api.intercom.io/auth/eagle/token",
    "accessTokenBody": "client_id={{ urlencode client_id }}&client_secret={{ urlencode client_secret }}&code={{ urlencode code }}",
    "accessTokenHeaders": "{\"content-type\": \"application/x-www-form-urlencoded\"}",
    "accessTokenResponseMap": "{\"access_token\": \"/token\"}"
  }
}
