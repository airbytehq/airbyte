{
  "documentationUrl": "https://docs.airbyte.com/integrations/sources/google-analytics-data-api",
  "connectionSpecification": {
    "$schema" : "https://json-schema.org/draft-07/schema#",
    "title" : "Google Analytics Arcane Spec",
    "type" : "object",
    "required" : [
      "account_id",
      "start_date"
    ],
    "additionalProperties" : true,
    "properties" : {
      "credentials" : {
        "order" : 0,
        "type" : "object",
        "title" : "Credentials",
        "description" : "Credentials for the service",
        "oneOf" : [
          {
            "title": "Authenticate via Google (Oauth)",
            "type": "object",
            "required": ["client_id", "client_secret", "refresh_token"],
            "properties": {
              "auth_type": {
                "type": "string",
                "const": "Client",
                "order": 0
              },
              "client_id": {
                "title": "Client ID",
                "type": "string",
                "description": "The Client ID of your Google Analytics developer application.",
                "order": 1
              },
              "client_secret": {
                "title": "Client Secret",
                "type": "string",
                "description": "The Client Secret of your Google Analytics developer application.",
                "airbyte_secret": true,
                "order": 2
              },
              "refresh_token": {
                "title": "Refresh Token",
                "type": "string",
                "description": "The token for obtaining a new access token.",
                "airbyte_secret": true,
                "order": 3
              },
              "access_token": {
                "title": "Access Token",
                "type": "string",
                "description": "Access Token for making authenticated requests.",
                "airbyte_secret": true,
                "order": 4
              }
            }
          }
        ]
      },
      "account_id": {
        "title": "Account ID",
        "description": "Your Google Analytics Account ID",
        "type": "integer",
        "examples": [12345, 123445, 999999]
      },
      "start_date": {
        "title": "Start Date",
        "description": "The start date to use for pulling report data",
        "default": "2023-01-01",
        "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
        "order": 1,
        "type": "string",
        "format": "date"
      }
    }
  }
}