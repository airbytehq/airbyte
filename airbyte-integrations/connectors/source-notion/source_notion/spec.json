{
  "documentationUrl": "https://docs.airbyte.io/integrations/sources/notion",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Notion Source Spec",
    "type": "object",
    "required": ["start_date"],
    "additionalProperties": true,
    "properties": {
      "start_date": {
        "title": "Start Date",
        "description": "UTC date and time in the format 2017-01-25T00:00:00Z. Any data before this date will not be replicated.",
        "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}.[0-9]{3}Z$",
        "examples": ["2020-11-16T00:00:00.000Z"],
        "type": "string",
        "order": 1
      },
      "credentials": {
        "title": "Authentication mechanism",
        "description": "Choose how to authenticate to Notion",
        "type": "object",
        "order": 2,
        "oneOf": [
          {
            "type": "object",
            "title": "Authenticate via OAuth token",
            "required": ["client_id", "client_secret", "access_token"],
            "additionalProperties": false,
            "properties": {
              "auth_type": {
                "type": "string",
                "const": "OAuth",
                "enum": ["OAuth"],
                "order": 0
              },
              "client_id": {
                "title": "Client ID",
                "type": "string",
                "description": "The ClientID of your Notion integration.",
                "airbyte_secret": true
              },
              "client_secret": {
                "title": "Client Secret",
                "type": "string",
                "description": "The ClientSecret of your Notion integration.",
                "airbyte_secret": true
              },
              "access_token": {
                "title": "Access Token",
                "type": "string",
                "description": "Access Token is a token you received by complete the OauthWebFlow of Notion.",
                "airbyte_secret": true
              }
            }
          },
          {
            "type": "object",
            "title": "Authenticate with Access Token",
            "required": ["access_token_"],
            "additionalProperties": false,
            "properties": {
              "auth_type": {
                "type": "string",
                "const": "Token",
                "enum": ["Token"],
                "default": "Token",
                "order": 1
              },
              "access_token_": {
                "title": "Access Token",
                "description": "Notion API access token, see the <a href=\"https://developers.notion.com/docs/authorization\">docs</a> for more information on how to obtain this token.",
                "type": "string",
                "airbyte_secret": true
              }
            }
          }
        ]
      }
    }
  },
  "authSpecification": {
    "auth_type": "oauth2.0",
    "oauth2Specification": {
      "rootObject": ["credentials", "0"],
      "oauthFlowInitParameters": [["client_id"], ["client_secret"]],
      "oauthFlowOutputParameters": [["access_token"]]
    }
  }
}
