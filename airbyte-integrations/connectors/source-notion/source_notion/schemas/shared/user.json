{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "object": {
      "enum": ["user"]
    },
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "avatar_url": {
      "type": ["null", "string"]
    },
    "type": {
      "enum": ["person", "bot"]
    },
    "person": {
      "type": ["null", "object"],
      "additionalProperties": true,
      "properties": {
        "email": {
          "type": "string"
        }
      }
    },
    "bot": {
      "type": ["null", "object"],
      "additionalProperties": true,
      "properties": {
        "owner": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "workspace": {
              "type": ["null", "boolean"]
            }
          }
        }
      }
    }
  }
}
