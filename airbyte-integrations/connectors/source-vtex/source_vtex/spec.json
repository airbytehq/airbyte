{
  "documentationUrl": "https://docsurl.com",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Vtex Spec",
    "type": "object",
    "required": [
      "start_date",
      "app_key",
      "app_token"
    ],
    "additionalProperties": false,
    "properties": {
      "start_date": {
        "type": "string",
        "description": "Start getting data from that date.",
        "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}.[0-9]{3}Z$",
        "examples": [
          "2021-01-01T00:00:00.000Z"
        ]
      },
      "client_name": {
        "type": "string",
        "description": "Your VTEX client name, usually the subdomain of your api endpoints"
      },
      "app_key": {
        "type": "string",
        "description": "Your VTEX app key"
      },
      "app_token": {
        "type": "string",
        "description": "Your VTEX app token"
      },
      "lookback_window_days": {
        "type": "integer",
        "description": "How many days to look behind por possible updates"
      }
    }
  }
}