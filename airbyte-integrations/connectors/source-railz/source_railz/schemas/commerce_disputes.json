{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": ["string", "integer"]
    },
    "businessName": {
      "type": "string"
    },
    "serviceName": {
      "type": "string"
    },
    "totalAmount": {
      "type": ["number", "string"]
    },
    "status": {
      "type": "string"
    },
    "reason": {
      "type": "string"
    },
    "dueDate": {
      "type": "string",
      "format": "date-time"
    },
    "createdDate": {
      "type": "string",
      "format": "date-time"
    },
    "sourceModifiedDate": {
      "type": ["null", "string"],
      "format": "date-time"
    },
    "orderRef": {
      "type": ["null", "object"],
      "properties": {
        "id": {
          "type": ["string", "integer"]
        },
        "orderNumber": {
          "type": ["null", "string"]
        }
      }
    },
    "currencyRef": {
      "type": ["null", "object"],
      "properties": {
        "id": {
          "type": ["null", "string", "integer"]
        },
        "name": {
          "type": "string"
        },
        "symbol": {
          "type": "string"
        }
      }
    }
  }
}
