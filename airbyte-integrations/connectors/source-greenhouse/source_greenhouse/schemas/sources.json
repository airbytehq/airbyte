  "properties": {
    "id": {
      "description": "The unique identifier for the source.",
      "type": "integer"
    },
    "name": {
      "description": "The name of the source.",
      "type": ["null", "string"]
    },
    "type": {
      "type": ["null", "object"],
      "properties": {
        "id": {
          "description": "The unique identifier for the type of the source.",
          "type": ["null", "integer"]
        },
        "name": {
          "description": "The name of the type of the source.",
          "type": ["null", "string"]
        }
      }
    }
  }
}
