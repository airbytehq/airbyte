{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "type": {
      "description": "Type of the resource.",
      "type": ["null", "string"]
    },
    "id": {
      "description": "Unique identifier for the user.",
      "type": "string"
    },
    "updated": {
      "description": "Date and time when the user resource was last updated.",
      "type": ["null", "string"],
      "format": "date-time"
    },
    "attributes": {
      "description": "Contains various attributes and information related to a user.",
      "type": ["null", "object"],
      "additionalProperties": true,
      "properties": {
        "email": {
          "description": "Email address of the user.",
          "type": ["null", "string"]
        },
        "phone_number": {
          "description": "User's phone number.",
          "type": ["null", "string"]
        },
        "anonymous_id": {
          "description": "Unique anonymous identifier for the user.",
          "type": ["null", "string"]
        },
        "external_id": {
          "description": "External identifier for the user.",
          "type": ["null", "string"]
        },
        "first_name": {
          "description": "User's first name.",
          "type": ["null", "string"]
        },
        "last_name": {
          "description": "User's last name.",
          "type": ["null", "string"]
        },
        "organization": {
          "description": "User's organization or company name.",
          "type": ["null", "string"]
        },
        "title": {
          "description": "User's title or salutation.",
          "type": ["null", "string"]
        },
        "image": {
          "description": "URL of the user's profile image.",
          "type": ["null", "string"]
        },
        "created": {
          "description": "Date and time of user creation.",
          "type": ["null", "string"],
          "format": "date-time"
        },
        "updated": {
          "description": "Date and time when the user information was last updated.",
          "type": ["null", "string"],
          "format": "date-time"
        },
        "last_event_date": {
          "description": "Date and time of the user's last event.",
          "type": ["null", "string"],
          "format": "date-time"
        },
        "location": {
          "description": "Contains geographical location information.",
          "type": ["null", "object"],
          "properties": {
            "address1": {
              "type": ["null", "string"]
            },
            "address2": {
              "type": ["null", "string"]
            },
            "city": {
              "type": ["null", "string"]
            },
            "country": {
              "type": ["null", "string"]
            },
            "latitude": {
              "oneOf": [
                {
                  "type": "null"
                },
                {
                  "type": "number"
                },
                {
                  "type": "string"
                }
              ]
            },
            "longitude": {
              "oneOf": [
                {
                  "type": "null"
                },
                {
                  "type": "number"
                },
                {
                  "type": "string"
                }
              ]
            },
            "region": {
              "type": ["null", "string"]
            },
            "zip": {
              "type": ["null", "string"]
            },
            "timezone": {
              "type": ["null", "string"]
            },
            "ip": {
              "type": ["null", "string"]
            }
          }
        },
        "properties": {
          "description": "Additional properties or attributes related to the user.",
          "type": ["null", "object"],
          "additionalProperties": true
        },
        "subscriptions": {
          "description": "Information about the user's subscriptions.",
          "$ref": "subscriptions.json"
        },
        "predictive_analytics": {
          "description": "Predictive analytics data related to the user's behavior.",
          "type": ["null", "object"],
          "properties": {
            "historic_clv": {
              "description": "Historic customer lifetime value.",
              "type": ["null", "number"]
            },
            "predicted_clv": {
              "description": "Predicted customer lifetime value.",
              "type": ["null", "number"]
            },
            "total_clv": {
              "description": "Total customer lifetime value.",
              "type": ["null", "number"]
            },
            "historic_number_of_orders": {
              "description": "Total number of historic orders by the user.",
              "type": ["null", "integer"]
            },
            "predicted_number_of_orders": {
              "description": "Predicted number of orders by the user.",
              "type": ["null", "number"]
            },
            "average_days_between_orders": {
              "description": "Average days between the user's orders.",
              "type": ["null", "number"]
            },
            "average_order_value": {
              "description": "Average value of the user's orders.",
              "type": ["null", "number"]
            },
            "churn_probability": {
              "description": "Probability of the user churning or leaving.",
              "type": ["null", "number"]
            },
            "expected_date_of_next_order": {
              "description": "Expected date of the user's next order.",
              "type": ["null", "string"]
            }
          }
        }
      }
    },
    "links": {
      "description": "Contains links related to the user.",
      "type": ["null", "object"],
      "properties": {
        "self": {
          "description": "Link to the user's own resource.",
          "type": ["null", "string"]
        }
      }
    },
    "relationships": {
      "description": "Relationships associated with the user.",
      "type": ["null", "object"],
      "properties": {
        "lists": {
          "description": "Lists associated with the user.",
          "type": ["null", "object"],
          "properties": {
            "links": {
              "type": ["null", "object"],
              "properties": {
                "self": {
                  "description": "Self link for lists.",
                  "type": ["null", "string"]
                },
                "related": {
                  "description": "Link to related lists.",
                  "type": ["null", "string"]
                }
              }
            }
          }
        },
        "segments": {
          "description": "Segments associated with the user.",
          "type": ["null", "object"],
          "properties": {
            "links": {
              "type": ["null", "object"],
              "properties": {
                "self": {
                  "description": "Self link for segments.",
                  "type": ["null", "string"]
                },
                "related": {
                  "description": "Link to related segments.",
                  "type": ["null", "string"]
                }
              }
            }
          }
        }
      }
    },
    "segments": {
      "description": "Segments associated with the user.",
      "type": ["null", "object"]
    }
  }
}
