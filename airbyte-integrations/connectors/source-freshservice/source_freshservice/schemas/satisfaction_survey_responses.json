{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "id": {
      "type": "integer"
    },
    "overall_rating": {
      "type": "integer"
    },
    "overall_rating_text": {
      "type": "string"
    },
    "primary_question": {
      "type": "string"
    },
    "questionnaire_responses": {
      "type": "object",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "question": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "question_text": {
                "type": "string"
              }
            },
            "required": ["question_text"]
          },
          "answers": {
            "type": "array",
            "items": [
              {
                "type": "object",
                "additionalProperties": true,
                "properties": {
                  "answer_text": {
                    "type": "string"
                  }
                },
                "required": ["answer_text"]
              }
            ]
          }
        },
        "required": ["question", "answers"]
      }
    },
    "created_at": {
      "type": "string"
    },
    "updated_at": {
      "type": "string"
    }
  },
  "required": [
    "id",
    "overall_rating",
    "overall_rating_text",
    "primary_question",
    "questionnaire_responses",
    "created_at",
    "updated_at"
  ]
}
