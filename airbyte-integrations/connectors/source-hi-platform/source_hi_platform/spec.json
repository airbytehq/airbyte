{
  "documentationUrl": "https://github.com/asaasdev/airbyte/tree/asaas/airbyte-integrations/connectors/source-hi-platform",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Hi Platform Spec",
    "type": "object",
    "required": ["login", "password", "start_date"],
    "additionalProperties": false,
    "properties": {
      "login": {
        "type": "string",
        "description": "Hi Platform API login."
      },
      "password": {
        "type": "string",
        "description": "Hi Platform API password.",
        "airbyte_secret": true
      },
      "start_date": {
        "type": "string",
        "description": "The date from which you'd like to replicate data for Spotify in the format YYYY-MM-DD. All data generated after this date will be replicated.",
        "examples": ["2021-03-01"],
        "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
      }
    }
  }
}