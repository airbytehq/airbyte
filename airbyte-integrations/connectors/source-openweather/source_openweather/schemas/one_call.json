{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "lat": {
      "type": "number"
    },
    "lon": {
      "type": "number"
    },
    "timezone": {
      "type": "string"
    },
    "timezone_offset": {
      "type": "number"
    },
    "current": {
      "type": "object",
      "properties": {
        "dt": {
          "type": "number"
        },
        "sunrise": {
          "type": "number"
        },
        "sunset": {
          "type": "number"
        },
        "temp": {
          "type": "number"
        },
        "feels_like": {
          "type": "number"
        },
        "pressure": {
          "type": "number"
        },
        "humidity": {
          "type": "number"
        },
        "dew_point": {
          "type": "number"
        },
        "uvi": {
          "type": "number"
        },
        "clouds": {
          "type": "number"
        },
        "visibility": {
          "type": "number"
        },
        "wind_speed": {
          "type": "number"
        },
        "wind_deg": {
          "type": "number"
        },
        "weather": {
          "type": "array"
        },
        "rain": {
          "type": "object",
          "properties": {
            "1h": {
              "type": "number"
            }
          }
        }
      }
    },
    "minutely": {
      "type": "array"
    },
    "hourly": {
      "type": "array"
    },
    "daily": {
      "type": "array"
    },
    "alerts": {
      "type": "array"
    }
  }
}
