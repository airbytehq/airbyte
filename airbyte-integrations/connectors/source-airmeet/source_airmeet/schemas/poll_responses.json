{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "email": {
      "type": ["null", "string"]
    },
    "name": {
      "type": ["null", "string"]
    },
    "user_id": {
      "type": ["null", "string"]
    },
    "polls": {
      "type": ["null", "array"],
      "items": {
        "type": "object",
        "properties": {
          "question": {
            "type": ["null", "string"]
          },
          "answer": {
            "type": ["null", "string"]
          },
          "time_stamp": {
            "type": ["null", "string"],
            "format": "date-time"
          }
        }
      }
    }
  }
}
