{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "workflowId": {
      "description": "Information about the workflow.",
      "type": "object",
      "properties": {
        "name": {
          "description": "The name of the workflow.",
          "type": "string"
        },
        "draft": {
          "description": "Whether the workflow is in the draft state.",
          "type": "boolean"
        }
      }
    },
    "postFunctions": {
      "description": "The list of post functions within the workflow.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "description": "The ID of the transition rule.",
            "type": "string"
          },
          "key": {
            "description": "The key of the rule, as defined in the Connect app descriptor.",
            "type": "string",
            "readOnly": true
          },
          "configuration": {
            "type": "object",
            "properties": {
              "value": {
                "description": "Configuration of the rule, as it is stored by the Connect app on the rule configuration page.",
                "type": "string"
              }
            }
          },
          "transition": {
            "readOnly": true,
            "type": "object",
            "properties": {
              "id": {
                "description": "The transition ID.",
                "type": "integer"
              },
              "name": {
                "description": "The transition name.",
                "type": "string"
              }
            }
          }
        }
      }
    },
    "conditions": {
      "description": "The list of conditions within the workflow.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "description": "The ID of the transition rule.",
            "type": "string"
          },
          "key": {
            "description": "The key of the rule, as defined in the Connect app descriptor.",
            "type": "string",
            "readOnly": true
          },
          "configuration": {
            "type": "object",
            "properties": {
              "value": {
                "description": "Configuration of the rule, as it is stored by the Connect app on the rule configuration page.",
                "type": "string"
              }
            }
          },
          "transition": {
            "readOnly": true,
            "type": "object",
            "properties": {
              "id": {
                "description": "The transition ID.",
                "type": "integer"
              },
              "name": {
                "description": "The transition name.",
                "type": "string"
              }
            }
          }
        }
      }
    },
    "validators": {
      "description": "The list of validators within the workflow.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "description": "The ID of the transition rule.",
            "type": "string"
          },
          "key": {
            "description": "The key of the rule, as defined in the Connect app descriptor.",
            "type": "string",
            "readOnly": true
          },
          "configuration": {
            "type": "object",
            "properties": {
              "value": {
                "description": "Configuration of the rule, as it is stored by the Connect app on the rule configuration page.",
                "type": "string"
              }
            }
          },
          "transition": {
            "readOnly": true,
            "type": "object",
            "properties": {
              "id": {
                "description": "The transition ID.",
                "type": "integer"
              },
              "name": {
                "description": "The transition name.",
                "type": "string"
              }
            }
          }
        }
      }
    }
  },
  "readOnly": true
}
