{
  "documentationUrl": "https://docsurl.com",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Rakuten RMS Spec",
    "type": "object",
    "required": ["service_secret", "licence_key"],
    "additionalProperties": true,
    "properties": {
      "service_secret": {
        "title": "Service Secret",
        "description": "Service secret for Rakuten RMS API",
        "airbyte_secret": true,
        "type": "string",
        "group": "auth",
        "order": 1
      },
      "licence_key": {
        "title": "Licence Key",
        "description": "Licence key for Rakuten RMS API",
        "airbyte_secret": true,
        "type": "string",
        "group": "auth",
        "order": 2
      },
      "inventories_min_quantity": {
        "title": "Minimum Stock Quantity",
        "description": "Minimum quantity for inventories",
        "order": 1,
        "type": "integer",
        "group": "inventories",
        "default": 0
      },
      "inventories_max_quantity": {
        "title": "Maximum Stock Quantity",
        "description": "Maximum quantity for inventories",
        "order": 2,
        "type": "integer",
        "group": "inventories",
        "default": 10000
      },
      "inventories_step_interval": {
        "title": "Step Interval",
        "description": "Step interval for inventories",
        "order": 3,
        "type": "integer",
        "group": "inventories",
        "default": 50
      }
    },
    "groups": [
      {
        "name": "auth",
        "title": "Authentication",
        "description": "Authentication parameters for Rakuten RMS API"
      },
      {
        "name": "inventories",
        "title": "Inventories",
        "description": "Inventories parameters for Rakuten RMS API"
      }
    ]
  }
}