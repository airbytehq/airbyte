{
  "documentationUrl": "https://docs.airbyte.io/integrations/sources/corebos",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "CoreBOS Source Spec",
    "type": "object",
    "required": ["url","username","access_token","query"],
    "additionalProperties": false,
    "properties": {
      "url": {
        "description": "a coreBOS server instance url http:// or https://",
        "type": "string",
        "pattern": "^http(s)?:\\/\\/.*$",
        "example":"http://test.coreboscrm.com/denorm/webservice.php"
      },
      "access_token":{
          "description":"The user access token.",
          "type":"string",
          "example": "aj49tFk90nGdm3Aui"
      },
      "username": {
        "description": "User name to be included in the request.",
        "type": "string",
        "example": "charity"
      },
      "query": {
        "description": "the SQL query to execute to retrieve data",
        "type": "string",
        "example": "select * from helpdesk;"
      }
    }
  }
}

