{
  "type": "object",
  "required": [
    "account",
    "balanceDate",
    "amount",
    "currencyCode",
    "uuid"
  ],
  "properties": {
    "account": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string",
          "example": "ACCOUNT001",
          "description": "Code that represents the account.",
          "minLength": 1,
          "maxLength": 12
        },
        "statementIdentifier": {
          "type": "string",
          "example": "Statement identifier",
          "description": "Account Statement Identifier of the account.",
          "minLength": 0,
          "maxLength": 50
        },
        "uuid": {
          "type": "string",
          "format": "uuid",
          "example": "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx",
          "description": "Unique internal identifier that represents the account."
        }
      },
      "title": "BK-BankAccountModel"
    },
    "amount": {
      "type": "number",
      "format": "double",
      "example": 1.123,
      "description": "End of day balance value."
    },
    "balanceDate": {
      "type": "string",
      "format": "date",
      "example": "2019-11-11",
      "description": "Date of the end of day balance."
    },
    "currencyCode": {
      "type": "string",
      "example": "EUR",
      "description": "Account currency code.",
      "minLength": 1,
      "maxLength": 3
    },
    "uuid": {
      "type": "string",
      "example": "03213c7f-8038-48c7-9650-d2dd030c875d:2020-01-01",
      "description": "Unique identifier of the balance made up of the Accoutn UUID and the balance date"
    }
  },
  "title": "BK-BankStatementBalanceModel",
  "description": "Bank statement balance.",
  "$schema": "http://json-schema.org/schema#"
}
