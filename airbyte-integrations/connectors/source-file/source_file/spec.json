{
  "documentationUrl": "https://docs.airbyte.io/integrations/sources/file",

  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "File Source Spec",
    "type": "object",
    "required": ["url", "storage"],

    "properties": {
      "format": {
        "type": "string",
        "enum": [
          "csv",
          "json",
          "html",
          "excel",
          "feather",
          "parquet",
          "orc",
          "pickle"
        ],
        "default": "csv"
      },
      "reader_options": {
        "type": "string"
      },

      "storage": {
        "type": "string",
        "enum": ["HTTPS", "GCS", "S3", "SSH", "SFTP", "WebHDFS", "local"],
        "default": "HTTPS"
      },

      "url": {
        "type": "string"
      }
    },

    "dependencies": {
      "storage": {
        "oneOf": [
          {
            "properties": {
              "storage": {
                "enum": ["GCS"]
              },
              "service_account_json": {
                "type": "string"
              },
              "reader_impl": {
                "type": "string",
                "enum": ["smart_open", "gcsfs"],
                "default": "gcsfs"
              }
            }
          },

          {
            "properties": {
              "storage": {
                "enum": ["S3"]
              },
              "aws_access_key_id": {
                "type": "string"
              },
              "aws_secret_access_key": {
                "type": "string"
              },
              "reader_impl": {
                "type": "string",
                "enum": ["smart_open", "s3fs"],
                "default": "s3fs"
              }
            }
          },

          {
            "properties": {
              "storage": {
                "enum": ["SSH"]
              },
              "user": {
                "type": "string"
              },
              "password": {
                "type": "string"
              },
              "host": {
                "type": "string"
              }
            },
            "required": ["user", "host"]
          },

          {
            "properties": {
              "storage": {
                "enum": ["SFTP"]
              },
              "user": {
                "type": "string"
              },
              "password": {
                "type": "string"
              },
              "host": {
                "type": "string"
              }
            },
            "required": ["user", "host"]
          },

          {
            "properties": {
              "storage": {
                "enum": ["WebHDFS"]
              },
              "host": {
                "type": "string"
              },
              "port": {
                "type": "number"
              }
            },
            "required": ["host", "port"]
          }
        ]
      }
    }
  }
}
