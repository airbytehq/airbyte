{
  "documentationUrl": "https://docs.airbyte.io/integrations",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Dixa Spec",
    "type": "object",
    "required": ["api_token", "start_timestamp"],
    "additionalProperties": false,
    "properties": {
      "api_token": {
        "type": "string",
        "description": "Dixa API token",
        "airbyte_secret": true
      },
      "start_timestamp": {
        "type": "string",
        "description": "Millisecond-precision Unix timestamp. Rows which have been updated from this time onwards will be synced",
        "pattern": "^[0-9]{13}$",
        "examples": ["1234567890123"]
      },
      "batch_size": {
        "type": "string",
        "description": "Number of days to batch into one request. Max 31.",
        "pattern": "^[0-9]{1,2}$",
        "examples": [1, 31],
        "default": 31
      }
    }
  }
}
