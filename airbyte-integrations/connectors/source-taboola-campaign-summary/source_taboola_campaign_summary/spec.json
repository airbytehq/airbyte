{
  "documentationUrl": "https://docsurl.com",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Taboola Campaign Summary Spec",
    "type": "object",
    "required": [
      "client_id",
      "client_secret",
      "account_id",
      "initial_date"
    ],
    "additionalProperties": true,
    "properties": {
      "client_id": {
        "type": "string",
        "title": "Client ID",
        "description": "The Client ID of your Taboola Application.",
        "airbyte_secret": true
      },
      "client_secret": {
        "type": "string",
        "title": "Client Secret",
        "description": "The Client Secret of your Taboola Application",
        "airbyte_secret": true
      },
      "account_id": {
        "type": "string",
        "title": "Account ID",
        "description": "Account ID to be used.",
        "airbyte_secret": false,
        "examples": ["company-sc"]
      },
      "initial_date": {
        "type": "string",
        "title": "Initial Start Date for Summary",
        "format": "date",
        "default": "2020-01-01",
        "description": "UTC date in YYYY-MM-DD format. Any reports before this date will not be replicated."
      }
    }
  }
}
