{
  "documentationUrl": "https://docs.airbyte.io/connector-development",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Calltouch Spec",
    "type": "object",
    "required": [
      "site_id",
      "credentials",
      "date_range"
    ],
    "additionalProperties": false,
    "properties": {
      "credentials": {
        "title": "Авторизация",
        "order": 0,
        "type": "object",
        "oneOf": [
          {
            "title": "Токен доступа",
            "type": "object",
            "properties": {
              "auth_type": {
                "title": "Тип авторизации",
                "const": "access_token_auth",
                "order": 0,
                "type": "string"
              },
              "access_token": {
                "title": "Токен доступа",
                "description": "Client ID",
                "type": "string",
                "airbyte_secret": true
              }
            },
            "required": [
              "auth_type",
              "access_token"
            ]
          },
          {
            "title": "CredentialsCraft",
            "type": "object",
            "properties": {
              "auth_type": {
                "title": "Тип авторизации",
                "const": "credentials_craft_auth",
                "order": 0,
                "type": "string"
              },
              "credentials_craft_host": {
                "title": "Хост CredentialsCraft",
                "description": "Хост CredentialsCraft.",
                "examples": [
                  "https://credentialscraft.mysite.com"
                ],
                "type": "string",
                "order": 1
              },
              "credentials_craft_token": {
                "title": "Токен доступа к CredentialsCraft",
                "description": "Токен для авторизации в сервисе CredentialsCraft (не токен ВК).",
                "type": "string",
                "airbyte_secret": true,
                "order": 2
              },
              "credentials_craft_token_id": {
                "title": "ID Токена в CredentialsCraft",
                "desctiption": "ID токена ВК в сервисе CredentialsCraft",
                "examples": [
                  123
                ],
                "type": "integer",
                "order": 3
              }
            },
            "required": [
              "auth_type",
              "credentials_craft_host",
              "credentials_craft_token",
              "credentials_craft_token_id"
            ]
          }
        ]
      },
      "site_id": {
        "type": "integer",
        "title": "Site ID",
        "description": "Calltouch site identifier",
        "order": 1
      },
      "date_range": {
        "title": "Date Range",
        "description": "Choose date period that must be loaded",
        "type": "object",
        "order": 2,
        "oneOf": [
          {
            "type": "object",
            "title": "Custom Date Range",
            "required": [
              "date_from",
              "date_to",
              "date_range_type"
            ],
            "properties": {
              "date_from": {
                "title": "Start Date",
                "type": "string",
                "description": "Start date in format YYYY-MM-DD.",
                "pattern": "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "pattern_descriptor": "YYYY-MM-DD",
                "examples": [
                  "2023-01-01"
                ],
                "format": "date",
                "order": 0
              },
              "date_to": {
                "title": "End Date",
                "type": "string",
                "description": "End date in format YYYY-MM-DD.",
                "pattern": "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "examples": [
                  "2023-01-30"
                ],
                "pattern_descriptor": "YYYY-MM-DD",
                "format": "date",
                "order": 1
              },
              "date_range_type": {
                "type": "string",
                "title": "Date Range Type",
                "description": "Custom Date",
                "const": "custom_date",
                "order": 2
              }
            }
          },
          {
            "type": "object",
            "title": "Last N Days",
            "required": [
              "last_days_count",
              "should_load_today",
              "date_range_type"
            ],
            "properties": {
              "last_days_count": {
                "title": "Last Days Count",
                "type": "integer",
                "description": "Count of last days exclude today.",
                "minimum": 0,
                "maximum": 3650,
                "examples": [
                  30
                ],
                "order": 0
              },
              "should_load_today": {
                "title": "Load Today?",
                "type": "boolean",
                "description": "Should connector load today time as End Time? If not, End Time will be yesterday.",
                "order": 1,
                "default": false
              },
              "date_range_type": {
                "type": "string",
                "title": "Date Range Type",
                "description": "Last N Days",
                "const": "last_n_days",
                "order": 2
              }
            }
          },
          {
            "type": "object",
            "title": "From Start Date To Today",
            "description": "Load data from Start Date to Today. Only with this option you can use incremental sync.",
            "required": [
              "date_from",
              "should_load_today",
              "date_range_type"
            ],
            "properties": {
              "date_from": {
                "title": "Start Date",
                "type": "string",
                "description": "Start date in format YYYY-MM-DD.",
                "pattern": "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "pattern_descriptor": "YYYY-MM-DD",
                "examples": [
                  "2023-01-01"
                ],
                "format": "date",
                "order": 0
              },
              "should_load_today": {
                "title": "Load Today?",
                "type": "boolean",
                "description": "Should connector load today date as End Date? If not, End Date will be yesterday.",
                "order": 1,
                "default": false
              },
              "date_range_type": {
                "type": "string",
                "title": "Date Range Type",
                "description": "From start date to today",
                "const": "from_start_date_to_today",
                "order": 2
              }
            }
          }
        ]
      }
    }
  }
}