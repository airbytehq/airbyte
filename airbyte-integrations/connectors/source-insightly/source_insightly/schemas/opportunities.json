{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "OPPORTUNITY_ID": {
      "type": "integer"
    },
    "OPPORTUNITY_NAME": {
      "type": "string"
    },
    "OPPORTUNITY_DETAILS": {
      "type": "string"
    },
    "OPPORTUNITY_STATE": {
      "type": "string"
    },
    "RESPONSIBLE_USER_ID": {
      "type": "integer"
    },
    "CATEGORY_ID": {
      "type": "integer"
    },
    "IMAGE_URL": {
      "type": "string"
    },
    "BID_CURRENCY": {
      "type": "string"
    },
    "BID_AMOUNT": {
      "type": "integer"
    },
    "BID_TYPE": {
      "type": "string"
    },
    "BID_DURATION": {
      "type": "integer"
    },
    "ACTUAL_CLOSE_DATE": {
      "type": "string",
      "format": "date-time"
    },
    "DATE_CREATED_UTC": {
      "type": "string",
      "format": "date-time"
    },
    "DATE_UPDATED_UTC": {
      "type": "string",
      "format": "date-time"
    },
    "OPPORTUNITY_VALUE": {
      "type": "integer"
    },
    "PROBABILITY": {
      "type": "integer"
    },
    "FORECAST_CLOSE_DATE": {
      "type": "string",
      "format": "date-time"
    },
    "OWNER_USER_ID": {
      "type": "integer"
    },
    "LAST_ACTIVITY_DATE_UTC": {
      "type": "string",
      "format": "date-time"
    },
    "NEXT_ACTIVITY_DATE_UTC": {
      "type": "string",
      "format": "date-time"
    },
    "PIPELINE_ID": {
      "type": "integer"
    },
    "STAGE_ID": {
      "type": "integer"
    },
    "CREATED_USER_ID": {
      "type": "integer"
    },
    "ORGANISATION_ID": {
      "type": "integer"
    },
    "PRICEBOOK_ID": {
      "type": "integer"
    },
    "CUSTOMFIELDS": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "FIELD_NAME": {
              "type": "string"
            },
            "FIELD_VALUE": {
              "type": "object"
            }
          }
        }
      ]
    },
    "TAGS": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "TAG_NAME": {
              "type": "string"
            }
          },
          "required": ["TAG_NAME"]
        }
      ]
    },
    "LINKS": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "LINK_ID": {
              "type": "integer"
            },
            "OBJECT_NAME": {
              "type": "string"
            },
            "OBJECT_ID": {
              "type": "integer"
            },
            "LINK_OBJECT_NAME": {
              "type": "string"
            },
            "LINK_OBJECT_ID": {
              "type": "integer"
            },
            "ROLE": {
              "type": "string"
            },
            "DETAILS": {
              "type": "string"
            },
            "RELATIONSHIP_ID": {
              "type": "integer"
            },
            "IS_FORWARD": {
              "type": "boolean"
            }
          }
        }
      ]
    }
  }
}
