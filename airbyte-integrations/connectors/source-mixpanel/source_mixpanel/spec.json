{
  "documentationUrl": "https://docs.airbyte.com/integrations/sources/mixpanel",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Source Mixpanel Spec",
    "type": "object",
    "properties": {
      "credentials": {
        "title": "Authentication *",
        "type": "object",
        "order": 0,
        "oneOf": [
          {
            "type": "object",
            "title": "Service Account",
            "required": ["username", "secret"],
            "properties": {
              "option_title": {
                "type": "string",
                "const": "Service Account",
                "order": 0
              },
              "username": {
                "order": 1,
                "title": "Username",
                "type": "string"
              },
              "secret": {
                "order": 2,
                "title": "Secret",
                "type": "string",
                "airbyte_secret": true
              }
            }
          },
          {
            "type": "object",
            "title": "Project Secret",
            "required": ["api_secret"],
            "properties": {
              "option_title": {
                "type": "string",
                "const": "Project Secret",
                "order": 0
              },
              "api_secret": {
                "order": 1,
                "title": "Project Secret",
                "type": "string",
                "airbyte_secret": true
              }
            }
          }
        ]
      },
      "project_id": {
        "order": 1,
        "title": "Project ID",
        "type": "integer"
      },
      "attribution_window": {
        "order": 2,
        "title": "Attribution Window",
        "type": "integer",
        "default": 5
      },
      "project_timezone": {
        "order": 3,
        "title": "Project Timezone",
        "type": "string",
        "default": "US/Pacific",
        "examples": ["US/Pacific", "UTC"]
      },
      "select_properties_by_default": {
        "order": 4,
        "title": "Select Properties By Default",
        "type": "boolean",
        "description": "Ensures that new properties on events and engage records are captured.",
        "default": true
      },
      "start_date": {
        "order": 5,
        "title": "Start Date",
        "type": "string",
        "description": "If not set, data from up to one year ago will replicated by default.",
        "examples": ["2021-11-16"],
        "pattern": "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}(T[0-9]{2}:[0-9]{2}:[0-9]{2}Z)?$"
      },
      "end_date": {
        "order": 6,
        "title": "End Date",
        "type": "string",
        "examples": ["2021-11-16"],
        "pattern": "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}(T[0-9]{2}:[0-9]{2}:[0-9]{2}Z)?$"
      },
      "region": {
        "order": 7,
        "title": "Region",
        "type": "string",
        "enum": ["US", "EU"],
        "default": "US"
      },
      "date_window_size": {
        "order": 8,
        "title": "Date slicing window",
        "description": "You can reduce it, if amount of data in each window is too big for your environment.",
        "type": "integer",
        "minimum": 1,
        "default": 15,
        "maximum": 30
      }
    }
  }
}
