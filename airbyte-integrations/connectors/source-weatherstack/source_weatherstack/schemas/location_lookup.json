{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "request": {
      "type": ["null", "object"],
      "properties": {
        "query": {
          "type": "string"
        },
        "results": {
          "type": "number"
        }
      }
    },
    "results": {
      "type": ["null", "array"],
      "properties": {
        "name": {
          "type": "string"
        },
        "country": {
          "type": "string"
        },
        "region": {
          "type": "string"
        },
        "lon": {
          "type": "string"
        },
        "lat": {
          "type": "string"
        },
        "timezone_id": {
          "type": "string"
        },
        "utc_offset": {
          "type": "string"
        }
      }
    }
  }
}
