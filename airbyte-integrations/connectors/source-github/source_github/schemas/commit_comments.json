{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "repository": {
      "type": "string"
    },
    "html_url": {
      "type": ["null", "string"]
    },
    "url": {
      "type": ["null", "string"]
    },
    "id": {
      "type": ["null", "integer"]
    },
    "node_id": {
      "type": ["null", "string"]
    },
    "body": {
      "type": ["null", "string"]
    },
    "path": {
      "type": ["null", "string"]
    },
    "position": {
      "type": ["null", "integer"]
    },
    "line": {
      "type": ["null", "integer"]
    },
    "commit_id": {
      "type": ["null", "string"]
    },
    "user": {
      "$ref": "user.json"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "author_association": {
      "type": ["null", "string"]
    },
    "reactions": {
      "$ref": "reactions.json"
    }
  }
}
