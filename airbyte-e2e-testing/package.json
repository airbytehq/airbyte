{
  "name": "airbyte-e2e-testing",
  "version": "0.0.0",
  "description": "Airbyte e2e testing",
  "scripts": {
    "cypress:local": "cypress open --config-file cypress.local.json",
    "cypress:cloud": "cypress open --config-file cypress.cloud.json",
    "cypress:ci": "CYPRESS_BASE_URL=http://localhost:8000 cypress run"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "cypress/no-unnecessary-waiting": "warn"
    },
    "extends": [
      "plugin:cypress/recommended"
    ]
  },
  "devDependencies": {
    "cypress": "^8.7.0",
    "eslint-plugin-cypress": "^2.11.2",
    "mailslurp-client": "^15.0.1",
    "node-html-parser": "^5.0.0"
  }
}
